<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_menu_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sliding_pc_main_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/item_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/sliding_navigation_tab_more"
        android:drawableStart="@drawable/sliding_navigation_tab_more"
        android:hint="@string/menu_item_news"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/item_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/sliding_navigation_tab_video"
        android:drawableStart="@drawable/sliding_navigation_tab_video"
        android:hint="@string/menu_item_videos"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/item_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/sliding_navigation_tab_pics"
        android:drawableStart="@drawable/sliding_navigation_tab_pics"
        android:hint="@string/menu_item_pictures"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/item_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/sliding_navigation_tab_weather"
        android:drawableStart="@drawable/sliding_navigation_tab_weather"
        android:hint="天气"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/item_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/sliding_navigation_tab_more"
        android:drawableStart="@drawable/sliding_navigation_tab_more"
        android:hint="设置"
        android:textColor="@android:color/holo_green_dark" />
</LinearLayout>