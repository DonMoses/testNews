<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moses.mosesnews">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/moses_news_icon"
        android:label="新华新闻"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="SplashActivity"
            android:label="新华新闻">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.example.moses.mosesnews.MainActivity" />
        <activity android:name=".contents.news.NewsCategoryActivity" />
        <activity android:name=".contents.news.NewsDetailActivity" />
        <activity android:name=".contents.SettingActivity" />
        <activity android:name=".contents.videos.VideoPlayActivity" />
        <activity android:name=".contents.weather.WeatherActivity" />
        <activity android:name=".contents.weather.ZoneActivity" />
    </application>

</manifest>
